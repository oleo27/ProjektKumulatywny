<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz App" Height="500" Width="850">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Lewa kolumna: Lista quizów + CRUD -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="Quizy:" FontWeight="Bold"/>
            <ListBox x:Name="QuizListBox" Height="200" SelectionChanged="QuizListBox_SelectionChanged"/>
            <TextBox x:Name="QuizTitleTextBox" Width="150" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddQuiz_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditQuiz_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteQuiz_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Prawa kolumna: Pytania i odpowiedzi + CRUD -->
        <StackPanel Grid.Column="1">
            <TextBlock Text="Pytania:" FontWeight="Bold"/>
            <ListBox x:Name="QuestionListBox" Height="150" SelectionChanged="QuestionListBox_SelectionChanged"/>
            <TextBox x:Name="QuestionTextBox" Width="200" Margin="0,5,0,0" />
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddQuestion_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditQuestion_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteQuestion_Click"/>
            </StackPanel>

            <TextBlock Text="Odpowiedzi:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox x:Name="AnswerListBox" Height="100"/>
            <TextBox x:Name="AnswerTextBox" Width="200" Margin="0,5,0,0" />
            <CheckBox x:Name="IsCorrectCheckBox" Content="Prawidłowa odpowiedź"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddAnswer_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditAnswer_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteAnswer_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
