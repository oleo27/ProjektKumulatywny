<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quiz App" Height="520" Width="900">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBlock Text="Quizy" FontWeight="Bold" FontSize="14"/>
            
            <TextBox x:Name="QuizFilterTextBox"
                     Margin="0,5,0,5"
                     Height="25"
                     TextChanged="QuizFilterTextBox_TextChanged"/>

            <ListBox x:Name="QuizListBox"
                     Height="220"
                     SelectionChanged="QuizListBox_SelectionChanged"/>

            <TextBox x:Name="QuizTitleTextBox"
                     Height="25"
                     Margin="0,5,0,0"
                     />

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddQuiz_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditQuiz_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteQuiz_Click"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <TextBlock Text="Pytania" FontWeight="Bold" FontSize="14"/>

            <ListBox x:Name="QuestionListBox"
                     Height="150"
                     SelectionChanged="QuestionListBox_SelectionChanged"/>

            <TextBox x:Name="QuestionTextBox"
                     Height="25"
                     Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddQuestion_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditQuestion_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteQuestion_Click"/>
            </StackPanel>

            <TextBlock Text="Odpowiedzi" FontWeight="Bold" FontSize="14" Margin="0,15,0,0"/>

            <ListBox x:Name="AnswerListBox" Height="100"/>

            <TextBox x:Name="AnswerTextBox"
                     Height="25"
                     Margin="0,5,0,0"/>

            <CheckBox x:Name="IsCorrectCheckBox"
                      Content="Prawidłowa odpowiedź"
                      Margin="0,5,0,0"/>

            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                <Button Content="Dodaj" Width="60" Click="AddAnswer_Click"/>
                <Button Content="Edytuj" Width="60" Margin="5,0,0,0" Click="EditAnswer_Click"/>
                <Button Content="Usuń" Width="60" Margin="5,0,0,0" Click="DeleteAnswer_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
